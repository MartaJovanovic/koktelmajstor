<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Igre">

    <Button
        android:id="@+id/nazad"
        android:layout_width="121dp"
        android:layout_height="50dp"
        android:text="Nazad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="nazad"/>

    <ImageView
        android:id="@+id/karte"
        android:layout_width="200dp"
        android:layout_height="295dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pravila"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/josIgara"
        android:layout_width="121dp"
        android:layout_height="50dp"
        android:text="Jos igara"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/pravila"
        android:layout_width="171dp"
        android:layout_height="656dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nazad" />

    <Button
        android:id="@+id/dalje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Dalje"
        app:layout_constraintTop_toBottomOf="@+id/karte"
        tools:layout_editor_absoluteX="255dp"
        tools:ignore="MissingConstraints"
        android:onClick="dalje"/>
</androidx.constraintlayout.widget.ConstraintLayout>