<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Igre">

    <Button
        android:id="@+id/nazad"
        android:layout_width="121dp"
        android:layout_height="50dp"
        android:text="Nazad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="nazad"/>

    <ImageView
        android:id="@+id/karte"
        android:layout_width="184dp"
        android:layout_height="269dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/dalje"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pravila"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/josIgara"
        android:layout_width="121dp"
        android:layout_height="50dp"
        android:text="Jos igara"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="josIgara"/>

    <ImageView
        android:id="@+id/pravila"
        android:layout_width="299dp"
        android:layout_height="142dp"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/dalje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="152dp"
        android:onClick="dalje"
        android:text="Dalje"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/karte"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>